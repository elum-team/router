{
  "scripts": {
    "prebuild": "run-script-os",
    "prebuild:win32": "rd /s /q .\\dist || mkdir .\\dist\\",
    "prebuild:linux": "rm -rf ./dist/*",
    "copy": "run-script-os",
    "copy:win32": "Xcopy .\\static .\\dist /E /H /C /I",
    "copy:linux": "cp -r static/* ./dist",
    "build": "yarn prebuild && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript && yarn copy",
    "release": "git subtree push --prefix dist https://github.com/GMELUM/elum-state release",
    "start": "ts-node --project tsconfig.node.json -r tsconfig-paths/register index.ts",
    "test": "jest --config jest.config.json",
    "publish:beta": "cd dist && npm publish --tag beta && cd .."
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "latest",
    "@types/node": "latest",
    "cross-env": "latest",
    "esbuild": "latest",
    "nodemon": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "latest",
    "rollup-plugin-dts": "latest",
    "rollup-plugin-esbuild": "latest",
    "run-script-os": "^1.1.6",
    "tsconfig-paths": "latest",
    "tslib": "latest",
    "typescript": "latest"
  },
  "dependencies": {
    "@rollup/plugin-terser": "^0.4.0",
    "@types/benchmark": "^2.1.2",
    "@types/jest": "^29.4.0",
    "@types/lodash.isequal": "^4.5.6",
    "@types/react": "^18.0.28",
    "@vkontakte/vk-bridge": "^2.7.2",
    "benchmark": "^2.1.4",
    "elum-state": "^0.3.2",
    "jest": "^29.4.3",
    "lodash.isequal": "^4.5.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "ts-jest": "^29.0.5"
  }
}
