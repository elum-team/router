{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./src",
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
    "removeComments": true,
    "sourceMap": false,
    "allowUnreachableCode": true,
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "rollup.config.ts",
    "test/setup.js",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "index.ts",
    "dist/**/*"
  ]
}